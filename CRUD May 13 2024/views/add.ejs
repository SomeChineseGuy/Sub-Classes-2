  <style>
    body {
  padding: 30px;
  }

  h1 {
    font-size: 60px;
    text-align: center;
  }

  section {
    
    border-radius: 5px;
    padding: 40px 20px;
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  h2 {
    font-size: 32px;
  }

  h3 {
